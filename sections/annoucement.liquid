{{ 'announcement-bar.css' | asset_url | stylesheet_tag }}
{% if section.settings.show_announcement and section.settings.message != blank %}
    {% if section.settings.homepage_only == false or request.page_type == 'index' %}
        {% style %}
            .m-announcement-bar {
              background-color: {{ settings.color_annoucement_bg | default: '#222' }};
              position: relative;
              z-index: 60;
              {% if section.settings.show_divider %}
              border-bottom: 1px solid var(--color-border);
              {% endif %}
            }
            .m-announcement-bar__content, .m-announcement-bar__close {
              color: {{ settings.color_annoucement_text | default: '#fff' }}
            }
            .m-announcement-bar a:hover {
              opacity: .6;
            }
        {% endstyle %}
        <section
            data-section-id="{{ section.id }}"
            data-section-type="announcement"
            class="m-announcement-bar"
        >
            {%- unless section.settings.message_link == blank -%}
                <a href="{{ section.settings.message_link }}" class="m-announcement-bar__link">
            {%- endunless -%}
                <div class="m-announcement-bar__content">{{ section.settings.message }}</div>
            {%- unless section.settings.message_link == blank -%}
                </a>
            {%- endunless -%}
            {% if section.settings.show_close %}
                <div class="m-announcement-bar__close m:flex m:items-center">
                    <svg class="m-svg-icon--medium" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </div>
                <script>
                    document.querySelector('.m-announcement-bar__close').addEventListener('click', function () {
                        document.querySelector('.m-announcement-bar').remove()
                        document.documentElement.style.setProperty('--m-announcement-height', '0px')
                    })
                </script>
            {% endif %}
        </section>
    {% endif %}
{% endif %}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "homepage_only",
      "label": "Home page only",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_close",
      "label": "Show close button",
      "default": true
    },
    {
      "type": "textarea",
      "id": "message",
      "label": "Message",
      "default": "Free shipping for all orders from $60+"
    },
    {
      "type": "url",
      "id": "message_link",
      "label": "Link"
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "label": "Show divider",
      "default": false
    }
  ]
}
{% endschema %}
